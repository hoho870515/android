    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".miaoli_a"
    tools:showIn="@layout/activity_miaoli_a">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/miaoli_a" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="甘露蔬食餐廳的特色：(引用自 迴鄉驛站網站) 食材來源：90%以上選用在地當季有機食材， 以復育生態環境，並推動照顧小農的合作經濟。  傳統調味料：以本土契作農場生產的自製油品，與傳統古法釀製的醬油、醋品為主， 香氣滿溢、品質新鮮且無添加，讓人食在安心。 " />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>